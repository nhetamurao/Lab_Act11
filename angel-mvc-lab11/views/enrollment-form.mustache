<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrolment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <h1>Enrolment Form</h1>
    
    <form action="/enroll" method="POST">
        <table class="table">
            <tr>
                <td>Course</td>
                <td>
                    <select name="course_code" class="form-select" required>
                        {{#courses}}
                        <option value="{{ course_code }}">{{ course_name }}</option>
                        {{/courses}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Student</td>
                <td>
                    <select name="student_code" class="form-select" required>
                        {{#students}}
                        <option value="{{ student_code }}">{{ first_name }} {{ last_name }}</option>
                        {{/students}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Enrolment Date</td>
                <td><input type="date" name="enrolment_date" class="form-control" required></td>
            </tr>
            <tr>
                <td>Grade</td>
                <td><input type="text" name="grade" class="form-control" placeholder="Optional"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Enroll Student" class="btn btn-primary">
                </td>
            </tr>
        </table>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <hr />
    <li><a href="/courses">List of courses</a></li>
    <li><a href="/students">List of students</a></li>

</body>
</html>
