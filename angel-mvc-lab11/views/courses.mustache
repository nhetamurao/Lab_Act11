<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <h1>Courses</h1>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Course Name</th>
                <th>Course Code</th>
                <th>Enrolled Students</th>
                <th>Actions</th> <!-- New column for actions -->
            </tr>
        </thead>
        <tbody>

            {{# items }}
            <tr>
                <td>{{ id }}</td>
                <td>{{ course_name }}</td>
                <td>{{ course_code }}</td>
                <td>{{ enrolled_students }}</td> <!-- Display number of enrolled students -->
                <td>
                    <a href="/courses/{{ course_code }}" class="btn btn-info">View</a>
                    <a href="/export-course/{{ course_code }}" class="btn btn-secondary" target="_blank">Export to PDF</a> <!-- Export button -->
                </td>
            </tr>
            {{/ items }}
        </tbody>
    </table>

    <a href="/enrollment-form" class="btn btn-primary">Enroll a Student</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
